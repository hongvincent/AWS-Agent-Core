# AWS AgentCore Configuration Example

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ACCOUNT_ID=123456789012

# AgentCore Runtime
AGENTCORE_RUNTIME_TIMEOUT=480  # 8 hours max

# AgentCore Gateway
GATEWAY_API_ENDPOINT=https://gateway.agentcore.aws.com

# Tools
CALCULATOR_API_URL=http://localhost:8000/v1
LAMBDA_FUNCTION_ARN=arn:aws:lambda:ap-northeast-2:123456789012:function:hello-lambda

# Memory
MEMORY_BACKEND=dynamodb
MEMORY_TABLE_NAME=agentcore-memory

# Observability
LOG_LEVEL=INFO
CLOUDWATCH_LOG_GROUP=/aws/bedrock/agentcore/runtime
ENABLE_XRAY_TRACING=true

# Identity
IAM_ROLE_FULL=arn:aws:iam::123456789012:role/AgentRole-Full
IAM_ROLE_RESTRICTED=arn:aws:iam::123456789012:role/AgentRole-Restricted

# Testing
ENABLE_MOCK_SERVICES=true
SKIP_SLOW_TESTS=true
